{
  "name": "autoimagerotator",
  "version": "1.0.0",
  "description": "Show image in right orientation in html pages. Solution after: Bart Kalisz",
  "main": "dist/imagerotator.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stma/AutoImageRotator.git"
  },
  "keywords": [
    "image",
    "orientation",
    "html",
    "exim"
  ],
  "author": "Matyas Steiner <steiner.matyas@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stma/AutoImageRotator/issues"
  },
  "homepage": "https://github.com/stma/AutoImageRotator#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^5.7.0",
    "eslint-config-google": "^0.11.0",
    "husky": "^1.1.2",
    "npm-run-all": "^4.1.3"
  },
  "dependencies": {
    "base64-js": "^1.3.0",
    "debug": "^4.1.0"
  },
  "scripts": {
    "babel": "babel src -d dist --source-maps --presets es2015",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src",
    "clean": "rm -rf ./dist/*",
    "build": "npm-run-all clean lint babel",
    "precommit": "npm run lint"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "browser": true
    },
    "globals": {
      "DataView": true,
      "Promise": true
    },
    "rules": {
      "max-len": ["warn", {"code": 120}],
      "indent": ["error", 4]
    },
    "parser": "babel-eslint"
  }
}
